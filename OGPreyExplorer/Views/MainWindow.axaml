<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OGPreyExplorer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:OGPreyExplorer.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OGPreyExplorer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="OGPreyExplorer">
	<Grid ColumnDefinitions="1*,3*">
		<views:FileExplorer Grid.Column="0" />
		<Grid Grid.Column="1" RowDefinitions="1*,3*">
			<WrapPanel Margin="5,10" >
        <Button Name="BtnCgfExport" Content="Convert CGF" Click="Cgf_OnClick"/>
				<Button Content="Extract PAK" />
				<Button Content="Convert Textures" />
				<Button Content="Convert MTL" />
				<Button Content="Convert All" />
      </WrapPanel>
    </Grid>
	</Grid>
</Window>
